<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--The layer-list needs to be wrapped in selector otherwise padding
    is being ignored on API 22 -->
    <item>
        <layer-list
            xmlns:android="http://schemas.android.com/apk/res/android">

            <item>

                <shape
                    android:shape="rectangle">

                    <solid
                        android:color="@color/grey_lighten_20">
                    </solid>

                    <padding
                        android:bottom="4dp"
                        android:left="4dp"
                        android:right="4dp"
                        android:top="4dp">
                    </padding>

                </shape>

            </item>

            <item
                android:drawable="@drawable/ic_globe_white_24dp">
            </item>

        </layer-list>
    </item>
</selector>
