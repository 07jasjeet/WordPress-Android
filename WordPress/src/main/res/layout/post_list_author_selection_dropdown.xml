<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:foreground="?attr/selectableItemBackground"
              android:gravity="center"
              android:orientation="horizontal"
              android:padding="4dp"
              tools:ignore="UnusedAttribute">
    <!-- UnusedAttribute is ignored since foreground was added in API 23, however the impact of the missing foreground
         on lower APIs will be minimal -->

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/post_list_author_selection_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:importantForAccessibility="no"
        android:padding="12dp"
        tools:src="@drawable/ic_multiple_users_grey_darken_20_24dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/post_list_author_selection_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/text"
        tools:text="@string/post_list_author_everyone"/>
</LinearLayout>
