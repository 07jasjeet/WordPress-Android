<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <!-- FrameLayout required since we want to store a view holder it it's tag but Glide uses the tag on the ImageView -->

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/post_list_author_selection_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/post_list_author_background"
        tools:padding="12dp"
        tools:src="@drawable/ic_multiple_users_white_24dp"/>
</FrameLayout>

