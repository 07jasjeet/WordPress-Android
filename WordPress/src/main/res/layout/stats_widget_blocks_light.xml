<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rectangle_white_radius_4dp"
    android:orientation="vertical">

    <include layout="@layout/stats_widget_title_light"/>

    <LinearLayout
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="@dimen/margin_extra_large"
            android:paddingStart="@dimen/margin_extra_large">

            <TextView
                android:id="@+id/first_block_title"
                style="@style/StatsWidgetBlockKey.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/first_block_value"
                style="@style/StatsWidgetBlockValue.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20,345"/>

            <TextView
                android:id="@+id/third_block_title"
                style="@style/StatsWidgetBlockKey.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/third_block_value"
                style="@style/StatsWidgetBlockValue.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="139"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="@dimen/margin_extra_large"
            android:paddingStart="@dimen/margin_extra_large">

            <TextView
                android:id="@+id/second_block_title"
                style="@style/StatsWidgetBlockKey.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/second_block_value"
                style="@style/StatsWidgetBlockValue.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2409"/>

            <TextView
                android:id="@+id/fourth_block_title"
                style="@style/StatsWidgetBlockKey.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/fourth_block_value"
                style="@style/StatsWidgetBlockValue.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1239"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/stats_widget_error_light"/>
</LinearLayout>
