<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dashboard_card_large_title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">?attr/wpColorOnSurfaceHigh</item>
    </style>

    <style name="dashboard_card_small_title" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?attr/wpColorOnSurfaceHigh</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="dashboard_card_sub_title" parent="Base.TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/wpColorOnSurfaceHigh</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="dashboard_card_card_detail" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?attr/wpColorOnSurfaceMedium</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="dashboard_card_footer" parent="Base.TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_emphasis_medium_selector</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="ShapeAppearance.PagesCardIllustration" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">
            @dimen/my_site_dashboard_card_page_create_page_illustration_image_view_corner_radius
        </item>
    </style>

    <!--My Site Card - Post Item-->
    <style name="MySitePostItemTitle" parent="dashboard_card_sub_title">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MySitePostItemExcerpt" parent="dashboard_card_card_detail">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="MySiteCardFooterLinkItem" parent="dashboard_card_footer">
        <item name="android:paddingBottom">@dimen/my_site_card_footer_link_padding</item>
        <item name="android:paddingEnd">@dimen/my_site_card_footer_link_padding</item>
        <item name="android:paddingStart">@dimen/my_site_card_footer_link_padding</item>
        <item name="android:paddingTop">@dimen/my_site_card_footer_link_padding_top</item>
    </style>

    <style name="MySitePostItemTimeIcon">
        <item name="android:layout_width">@dimen/my_site_post_item_time_icon_size</item>
        <item name="android:layout_height">@dimen/my_site_post_item_time_icon_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="tint">?attr/wpColorOnSurfaceMedium</item>
    </style>

    <!--My Site Card - Today's Stats Item-->
    <style name="MySiteTodaysStatsCardTitle" parent="dashboard_card_small_title">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:lineSpacingExtra">@dimen/my_site_todays_stats_card_title_line_spacing_extra</item>
    </style>

    <style name="MySiteTodaysStatsCardStatTitle" parent="dashboard_card_card_detail" >
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">@dimen/my_site_todays_stats_card_stat_title_line_spacing_extra</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MySiteTodaysStatsCardStatCountText" parent="dashboard_card_large_title">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">@dimen/margin_extra_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
        <item name="android:minWidth">@dimen/my_site_today_stats_card_stat_title_min_width</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MySiteTodaysStatsCardMessage" parent="dashboard_card_card_detail">
        <item name="android:textAlignment">textStart</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingEnd">@dimen/margin_extra_large</item>
        <item name="android:paddingStart">@dimen/margin_extra_large</item>
        <item name="android:paddingTop">@dimen/margin_extra_large</item>
    </style>

    <!--My Site Card - Blogging Prompt-->

    <style name="MySiteCardAnswerButton" parent="@style/MySiteCardFooterLinkItem">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="MySiteCardAnsweredButton" parent="@style/MySiteCardAnswerButton">
        <item name="android:paddingStart">@dimen/margin_medium</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
    </style>

    <style name="MySiteCardBloggingPromptTitle" parent="dashboard_card_sub_title">
        <item name="android:maxLines">3</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MySiteCardBloggingPromptAvatar">
        <item name="android:layout_width">@dimen/avatar_sz_extra_small</item>
        <item name="android:layout_height">@dimen/avatar_sz_extra_small</item>
    </style>

</resources>
