<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dashboard_card_small_title">
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?attr/wpColorOnSurfaceHigh</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dashboard_card_large_title">
        <item name="android:textSize">@dimen/text_sz_double_extra_large</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:textColor">?attr/wpColorOnSurfaceHigh</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dashboard_card_sub_title">
        <item name="android:textSize">@dimen/text_sz_large</item>
        <item name="android:textColor">?attr/wpColorOnSurfaceHigh</item>
    </style>

    <style name="dashboard_card_card_detail">
        <item name="android:textSize">@dimen/text_sz_medium</item>
        <item name="android:textColor">?attr/wpColorOnSurfaceMedium</item>
    </style>

    <style name="dashboard_card_footer">
        <item name="android:textColor">@color/primary_emphasis_medium_selector</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <!--My Site Card - Pages card -->
    <style name="ShapeAppearance.PagesCardIllustration" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/my_site_dashboard_card_page_create_page_illustration_image_view_corner_radius</item>
    </style>

</resources>
